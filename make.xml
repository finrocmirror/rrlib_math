<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE targets PUBLIC "-//RRLIB//DTD make 1.0" "http://rrlib.org/xml/1.0/make.dtd">
<targets>

  <rrlib name="math"
        libs="boost">
    <sources>
      rtti.cpp
      tAngle.cpp
      tCholeskyDecomposition.cpp
      tLUDecomposition.cpp
      tMatrix.cpp
      tPolynomial.h
      tPose2D.cpp
      tPose3D.cpp
      tVector.cpp
      utilities.cpp
      angle/**
      matrix/**
      vector/**
    </sources>
  </rrlib>

  <rrlib name="random">
    <sources>
      tMultivariateNormalDistribution.h
    </sources>
  </rrlib>

  <testprogram name="vectors"
        optionallibs="oiv" >
    <sources>
      test/test_vectors.cpp
    </sources>
  </testprogram>

  <testprogram name="matrices"
        optionallibs="oiv" >
    <sources>
      test/test_matrices.cpp
    </sources>
  </testprogram>

  <testprogram name="angles">
    <sources>
      test/test_angles.cpp
    </sources>
  </testprogram>

  <unittest name="utilities">
    <sources>
      test/unit_test_utilities.cpp
    </sources>
  </unittest>

</targets>
